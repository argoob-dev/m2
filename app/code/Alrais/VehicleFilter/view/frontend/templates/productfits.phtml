<script>
require(["jquery"], function ($) {
    $("#product-vehicle-fits-make").on("change", function () {
        var makeId = $(this).val();
        $("#product-vehicle-fits-model option[data-make="+makeId+"]").show();
        $("#product-vehicle-fits-model option:not([data-make="+makeId+"])").hide();
        $("#product-vehicle-fits-model option:first-child").show();
        $("#product-vehicle-fits-model").attr("disabled",false);
        $("#product-vehicle-fits-year").attr("disabled",true);
        $("#product-vehicle-fits-model").focus();
    });
    $("#product-vehicle-fits-model").on("change", function () {
        var makeId = $("#product-vehicle-fits-make").val();
        var modelId = $(this).val();
        $("#product-vehicle-fits-year option[data-make="+makeId+"][data-model="+modelId+"]").show();
        $("#product-vehicle-fits-year option:not([data-make="+makeId+"][data-model="+modelId+"])").hide();
        $("#product-vehicle-fits-year option:first-child").show();
        $("#product-vehicle-fits-year").attr("disabled", false);
        $("#product-vehicle-fits-year").focus();
    });
    $("#product-vehicle-fits-year").on("change", function () {
        $('.fitment_detail').trigger('processStart');
        $.ajax({
            type: 'post',
            url: '<?= $this->getUrl('vehicle_fits/vehicle/add'); ?>',
            data: $("#product-fit-form").serialize(),
            success: function () {
                location.reload();
            }
        });
    });
    $(".comp_vehicle").on("click", function(){
        var acnchor;
        event.preventDefault();
        acnchor = $(this).attr('href').replace(/^.*?(#|$)/, '');
        $('.product.data.items [data-role="content"]').each(function (index) { 
            if (this.id == 'vehiclefits-tab') { 
                $('.product.data.items').tabs('activate', index);
                $('html, body').animate({
                    scrollTop: $('#' + acnchor).offset().top - 50
                }, 1200);
            }
        });
    });
});
</script>