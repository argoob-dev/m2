<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../app/code/Magento/Webapi/etc/webapi.xsd">
    <route url="/V1/vehiclefilter/makes" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getMake"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getMake"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/models/:makeId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getModel"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getModel"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/years/:makeId/:modelId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getYear"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getYear"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/vehicle/:makeId/:modelId/:yearId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getVehicle"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getVehicle"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/product/:productId/makes" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getProductVehicleMake"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getProductVehicleMake"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/product/:productId/models/:makeId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getProductVehicleModel"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getProductVehicleModel"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/product/:productId/years/:makeId/:modelId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getProductVehicleYear"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getProductVehicleYear"/>
        </resources>
    </route>
    <route url="/V1/vehiclefilter/product/vehicles/:productId" method="GET">
        <service class="Alrais\VehicleFilter\Api\VehicleFilterInterface" method="getVehicleFitsProduct"/>
        <resources>
            <resource ref="Alrais_VehicleFilter::getVehicleFitsProduct"/>
        </resources>
    </route>
</routes>