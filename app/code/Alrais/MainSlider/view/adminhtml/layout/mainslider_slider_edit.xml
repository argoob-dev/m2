<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    
    <body>
        <referenceContainer name="left">
            <block class="Alrais\MainSlider\Block\Adminhtml\Slider\Edit\Tabs" name="mainslider_slider_edit_tabs">
                <block class="Alrais\MainSlider\Block\Adminhtml\Slider\Edit\Tab\Main" name="mainslider_slider_edit_tab_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">mainslider_slider_edit_tab_main</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Alrais\MainSlider\Block\Adminhtml\Slider\Edit" name="mainslider_slider_edit"/>
        </referenceContainer>
    </body>
</page>
