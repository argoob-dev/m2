<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="page.wrapper">
       
        <container name="header.container" as="header_container" label="Page Header Container" htmlTag="header" htmlClass="page-header" before="main.content"/>
       
        <container name="mobile.menu.container" after="header.container" htmlTag="div"/>
       
        <container name="page.top" as="page_top" label="After Page Header" after="mobile.menu.container"/>
       
        <block class="Alrais\MainSlider\Block\Slider" name="slider.block" template="slider.phtml" after="mobile.menu.container"/>
       
        <block class="Magento\Cms\Block\Block" name="top.promo" before="featured_brands">
            <arguments>
                <argument name="block_id" xsi:type="string">promo</argument>
            </arguments>
        </block>
       
        <block class="Codazon\Shopbybrandpro\Block\Widget\BrandSlider" name="featured_brands" template="Codazon_Shopbybrandpro::brand/featured_brands.phtml" after="slider.block"/>
       
        <block class="Alrais\VehicleFilter\Block\VehicleFits" name="models.block" template="makes.phtml" after="featured_brands"/>
       
        <block class="Alrais\CategoryListing\Block\Category" name="shop.by.category" template="category.phtml" after="models.block"/>
       
        <block class="Alrais\Deals\Block\Deal" name="deals.block" template="products.phtml" after="shop.by.category"/>
        <block class="Alrais\Banner\Block\Banner" name="banner.block" template="banner.phtml" after="deals.block"/>
       
        <block class="Alrais\ProductWidget\Block\NewArrivals\Products" name="newarrivals.block" template="newarrivals/newarrivals.phtml" after="banner.block"/>
        <block class="Magento\Cms\Block\Block" name="best.combo" after="newarrivals.block">
            <arguments>
                <argument name="block_id" xsi:type="string">best.combo</argument>
            </arguments>
        </block>
        
        <block class="Alrais\ProductWidget\Block\TopRated\Products" name="backinstock.block" template="backinstock.phtml" after="best.combo"/>

        <!-- <block class="Alrais\ProductWidget\Block\MostViewed\Products" name="clearance.block" template="clearance.phtml" after="backinstock.block"/> -->

        <!-- <block class="Alrais\Banner\Block\Banner" name="bottom.banner.block" template="bottom_banner.phtml" after="clearance.block"/> -->

        <container name="footer-container" as="footer" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="page-footer"/>

    </referenceContainer>
</layout>
